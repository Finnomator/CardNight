<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane fx:id="root" prefHeight="535.0" prefWidth="844.0" styleClass="colored-pane" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cardnight.games.tictactoe.viewcontroller.TicTacToeView">

    <GridPane fx:id="tableGrid">
        <StackPane style="-fx-background-color: #00091f; -fx-border-color: white; -fx-border-width: 5;" GridPane.rowIndex="1">
            <GridPane fx:id="tttFeld" rotate="-60.0" maxWidth="-Infinity" maxHeight="-Infinity" style="-fx-border-color: rgba(255,255,255,0.16); -fx-border-width: 5; -fx-border-radius: 5;">
                <rowConstraints>
                    <RowConstraints vgrow="NEVER" />
                    <RowConstraints minHeight="5" vgrow="NEVER" />
                    <RowConstraints vgrow="NEVER" />
                    <RowConstraints minHeight="5" vgrow="NEVER" />
                    <RowConstraints vgrow="NEVER" />
                </rowConstraints>
                <columnConstraints>
                    <ColumnConstraints hgrow="NEVER" />
                    <ColumnConstraints hgrow="NEVER" minWidth="5" />
                    <ColumnConstraints hgrow="NEVER" />
                    <ColumnConstraints hgrow="NEVER" minWidth="5" />
                    <ColumnConstraints hgrow="NEVER" />
                </columnConstraints>

                <Button minHeight="88" minWidth="88" stylesheets="@../styles/transparent-image-button.css" />
                <Button minHeight="88" minWidth="88" stylesheets="@../styles/transparent-image-button.css" GridPane.columnIndex="2" />
                <Button minHeight="88" minWidth="88" stylesheets="@../styles/transparent-image-button.css" GridPane.columnIndex="4" />

                <Button minHeight="88" minWidth="88" stylesheets="@../styles/transparent-image-button.css" GridPane.rowIndex="2" />
                <Button minHeight="88" minWidth="88" stylesheets="@../styles/transparent-image-button.css" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                <Button minHeight="88" minWidth="88" stylesheets="@../styles/transparent-image-button.css" GridPane.columnIndex="4" GridPane.rowIndex="2" />

                <Button minHeight="88" minWidth="88" stylesheets="@../styles/transparent-image-button.css" GridPane.rowIndex="4" />
                <Button minHeight="88" minWidth="88" stylesheets="@../styles/transparent-image-button.css" GridPane.columnIndex="2" GridPane.rowIndex="4" />
                <Button minHeight="88" minWidth="88" stylesheets="@../styles/transparent-image-button.css" GridPane.columnIndex="4" GridPane.rowIndex="4" />

                <AnchorPane minHeight="5.0" style="-fx-background-color: white;" GridPane.columnSpan="5" GridPane.rowIndex="1" />
                <AnchorPane minHeight="5.0" style="-fx-background-color: white;" GridPane.columnSpan="5" GridPane.rowIndex="3" />
                <AnchorPane minWidth="5.0" style="-fx-background-color: white;" GridPane.columnIndex="1" GridPane.rowSpan="5" />
                <AnchorPane minWidth="5.0" style="-fx-background-color: white;" GridPane.columnIndex="3" GridPane.rowSpan="5" />

                <rotationAxis>
                   <Point3D x="1.0" />
                </rotationAxis>
            </GridPane>
        </StackPane>

        <HBox fx:id="handContainer" maxHeight="-Infinity" maxWidth="-Infinity" spacing="100" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="BOTTOM" />

        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="292.0" />
            <RowConstraints vgrow="ALWAYS" />
            <RowConstraints minHeight="164.6" />
        </rowConstraints>
      <padding>
         <Insets left="-5.0" right="-5.0" />
      </padding>

    </GridPane>

    <Button onAction="#pauseClick" stylesheets="@../styles/button-style.css" text="⏸" StackPane.alignment="TOP_RIGHT" />
</StackPane>
