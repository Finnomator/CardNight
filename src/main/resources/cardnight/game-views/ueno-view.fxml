<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<StackPane fx:id="root" minHeight="720" minWidth="1280" styleClass="colored-pane" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cardnight.games.ueno.viewcontroler.UenoView">

    <GridPane fx:id="tableGrid">

        <AnchorPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" style="-fx-background-color: #00091f;" GridPane.rowIndex="1" />

        <HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" rotate="-60.0" spacing="100.0" GridPane.halignment="CENTER" GridPane.rowIndex="1">
            <Button fx:id="nachziehstapelButton" onAction="#nachziehstapelClick" stylesheets="@../styles/transparent-image-button.css">
                <graphic>
                    <ImageView>
                        <Image url="@ueno/images/UNO_Rückseite.png" requestedWidth="150.0" preserveRatio="true"  />
                    </ImageView>
                </graphic>
            <padding>
               <Insets top="0.001" />
            </padding>
           <StackPane.margin>
              <Insets left="-10.0" />
           </StackPane.margin>
            </Button>
            <ImageView fx:id="ablagestapelImageView" fitWidth="150.0" preserveRatio="true" rotate="90.0" />
         <rotationAxis>
            <Point3D x="1.0" />
         </rotationAxis>
        </HBox>

        <HBox fx:id="gegnerHaendeContainer" maxHeight="-Infinity" maxWidth="-Infinity" spacing="100.0" GridPane.halignment="CENTER" GridPane.valignment="BOTTOM" StackPane.alignment="TOP_CENTER">
         <GridPane.margin>
            <Insets top="50.0" />
         </GridPane.margin></HBox>

      <columnConstraints>
         <ColumnConstraints hgrow="ALWAYS" />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
         <RowConstraints vgrow="ALWAYS" />
         <RowConstraints prefHeight="164.4" />
      </rowConstraints>
    </GridPane>

    <Button onAction="#pauseClick" stylesheets="@../styles/button-style.css" text="⏸" StackPane.alignment="TOP_RIGHT" />

</StackPane>
