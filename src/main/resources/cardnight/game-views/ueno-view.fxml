<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<StackPane fx:id="root" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cardnight.games.ueno.viewcontroler.UenoView">

    <GridPane>

        <AnchorPane maxHeight="-Infinity" prefHeight="300.0" style="-fx-background-color: brown;" GridPane.rowIndex="1" />

        <HBox maxHeight="-Infinity" maxWidth="-Infinity" spacing="50.0" GridPane.halignment="CENTER" GridPane.rowIndex="1">
            <Button fx:id="nachziehstapelButton" layoutX="120.0" layoutY="169.0" mnemonicParsing="false" onAction="#nachziehstapelClick" prefHeight="66.0" prefWidth="112.0" text="ÜNO" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
            <Button fx:id="ablageStapelButton" layoutX="372.0" layoutY="169.0" mnemonicParsing="false" prefHeight="66.0" prefWidth="104.0" text="0" GridPane.halignment="CENTER" GridPane.rowIndex="1" StackPane.alignment="CENTER" />
        </HBox>


        <HBox fx:id="gegnerHaendeContainer" maxHeight="-Infinity" maxWidth="-Infinity" spacing="100.0" GridPane.halignment="CENTER" GridPane.valignment="BOTTOM" StackPane.alignment="TOP_CENTER">
         <GridPane.margin>
            <Insets top="50.0" />
         </GridPane.margin></HBox>

      <columnConstraints>
         <ColumnConstraints hgrow="ALWAYS" />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints vgrow="ALWAYS" />
      </rowConstraints>
    </GridPane>

    <Text fx:id="gewinnerText" mouseTransparent="true" textAlignment="CENTER">
        <font>
            <Font size="27.0" />
        </font>
    </Text>

    <Button onAction="#pauseClick" text="⏸" StackPane.alignment="TOP_RIGHT" />

    <Circle fx:id="hauptSpielerTurnIndicator" fill="green" radius="25.0" StackPane.alignment="BOTTOM_RIGHT">
      <StackPane.margin>
         <Insets bottom="60.0" />
      </StackPane.margin></Circle>

</StackPane>
