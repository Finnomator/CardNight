<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane fx:id="root" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cardnight.games.witch.viewcontroller.WitchView">

    <GridPane fx:id="tableGrid">
        <HBox fx:id="gegnerUiHaendeContainer" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" spacing="10" GridPane.halignment="CENTER">
         <GridPane.margin>
            <Insets top="50.0" />
         </GridPane.margin></HBox>

        <AnchorPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" style="-fx-background-color: brown;" GridPane.rowIndex="1" />

        <GridPane fx:id="tischContentContainer" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
            <ImageView fx:id="trumpfImageView" rotate="270.0" />

            <columnConstraints>
                <ColumnConstraints />
                <ColumnConstraints prefWidth="100" />
                <ColumnConstraints prefWidth="164.4" />
            </columnConstraints>
         <rowConstraints>
            <RowConstraints />
         </rowConstraints>
        </GridPane>

        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints />
            <RowConstraints vgrow="ALWAYS" />
            <RowConstraints prefHeight="164.4" />
        </rowConstraints>
    </GridPane>
    <Button mnemonicParsing="false" onAction="#pauseClick" stylesheets="@../button-style.css" text="⏸" StackPane.alignment="TOP_RIGHT" />

    <VBox fx:id="schaetzungsRoot" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" StackPane.alignment="BOTTOM_LEFT">
        <Text text="Schätzung" />
        <TextField fx:id="schaetzungsEingabeFeld" alignment="CENTER" promptText="Anzahl Stiche" />
        <Button fx:id="schaetzungsOkButton" disable="true" maxWidth="1.7976931348623157E308" onAction="#schaetzungOkKlick" stylesheets="@../button-style.css" text="OK" />
    </VBox>

    <HBox maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="30" prefWidth="150" StackPane.alignment="BOTTOM_RIGHT">
        <Text text="Erhaltene Stiche: ">
            <font>
                <Font size="16.0" />
            </font>
        </Text>
        <Text fx:id="erhalteneSticheText" text="0">
            <font>
                <Font size="16.0" />
            </font>
        </Text>
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
    </HBox>


    <HBox maxHeight="-Infinity" maxWidth="-Infinity" StackPane.alignment="TOP_CENTER">
        <Text text="Runde ">
         <font>
            <Font size="22.0" />
         </font></Text>
        <Text fx:id="rundenNummerText" text="1">
            <font>
            <Font size="22.0" />
        </font></Text>
    </HBox>

</StackPane>
