<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane fx:id="root" prefHeight="800" prefWidth="1422" styleClass="colored-pane" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cardnight.MainMenuView">

    <ImageView fx:id="hintergrundImageView" preserveRatio="true" />

    <ImageView fx:id="spinKarte" fitHeight="150.0" preserveRatio="true">
        <Image url="@game-views/ueno/images/UNO_RÃ¼ckseite.png" />
    </ImageView>

    <ImageView fitHeight="150.0" preserveRatio="true" StackPane.alignment="TOP_CENTER">
        <effect>
            <Glow level="0.41" />
        </effect>
        <Image url="@images/CardNight_Title.png" />
      <StackPane.margin>
         <Insets top="15.0" />
      </StackPane.margin>
    </ImageView>

    <VBox maxHeight="-Infinity" maxWidth="-Infinity">
        <Button onAction="#onTicTacToeClick" onMouseEntered="#mouseEnteredTTT" onMouseExited="#mouseExitedTTT" prefHeight="70" prefWidth="112" stylesheets="@styles/absolute-transparent-image-button.css">
            <graphic>
                <ImageView fx:id="tttButtonImgView">
                    <Image preserveRatio="true" requestedHeight="70" url="@images/button-hintergruende/TicTacToe_Button.png" />
                </ImageView>
            </graphic>
            <VBox.margin>
                <Insets />
            </VBox.margin>
            <padding>
                <Insets top="0.001" />
            </padding>
        </Button>
        <Button onAction="#onUenoClick" onMouseEntered="#mouseEnteredUeno" onMouseExited="#mouseExitedUeno" prefHeight="70" prefWidth="112" stylesheets="@styles/absolute-transparent-image-button.css">
            <graphic>
                <ImageView fx:id="uenoButtonImgView">
                    <Image preserveRatio="true" requestedHeight="70" url="@images/button-hintergruende/UNO_Button.png" />
                </ImageView>
            </graphic>
            <padding>
                <Insets top="0.001" />
            </padding>
        </Button>
        <Button onAction="#onWitchClick" onMouseEntered="#mouseEnteredWitch" onMouseExited="#mouseExitedWitch" prefHeight="70" prefWidth="112" stylesheets="@styles/absolute-transparent-image-button.css">
            <graphic>
                <ImageView fx:id="witchButtonImgView">
                    <Image preserveRatio="true" requestedHeight="70" url="@images/button-hintergruende/Witch_Button.png" />
                </ImageView>
            </graphic>
            <padding>
                <Insets top="0.001" />
            </padding>
        </Button>
    </VBox>

   <Button onAction="#onBeendenClick" onMouseEntered="#mouseEnteredBeenden" onMouseExited="#mouseExitedBeenden" prefHeight="70" prefWidth="112" stylesheets="@styles/absolute-transparent-image-button.css" StackPane.alignment="BOTTOM_CENTER">
       <graphic>
           <ImageView fx:id="beendenButtonImgView">
               <Image preserveRatio="true" requestedHeight="70" url="@images/button-hintergruende/End_Button.png" />
           </ImageView>
       </graphic>
     <padding>
        <Insets top="0.001" />
     </padding>
   </Button>

    <fx:include source="sound-menu.fxml" StackPane.alignment="TOP_RIGHT" />

    <Text fill="WHITE" text="Developed by: Finn, Christian, Marc, David" StackPane.alignment="BOTTOM_RIGHT" />
    <VBox maxHeight="-Infinity" maxWidth="-Infinity" StackPane.alignment="BOTTOM_LEFT">
        <Hyperlink fx:id="debugLink" onAction="#debugClick" text="Debug" />
        <Hyperlink onAction="#githubRepoLinkClick" text="GitHub Repo" />
        <Hyperlink onAction="#reportBugLinkClick" text="Report Bug" />
    </VBox>
</StackPane>
