<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" xmlns="http://javafx.com/javafx/17.0.2-ea"
          fx:controller="com.example.informatiksoftwareprojekt.WelcomeView">

    <rowConstraints>
        <RowConstraints vgrow="NEVER"/>
        <RowConstraints vgrow="ALWAYS"/>
    </rowConstraints>
    <columnConstraints>
        <ColumnConstraints/>
    </columnConstraints>

    <Label text="Epic Game" textAlignment="CENTER">
        <font>
            <Font size="50.0"/>
        </font>
    </Label>

    <VBox alignment="CENTER" GridPane.rowIndex="1">
        <Button prefHeight="70.0" prefWidth="112.0" text="Start" onAction="#onStartButtonClick">
            <VBox.margin>
                <Insets top="20.0"/>
            </VBox.margin>
        </Button>
        <Button onAction="#onCreditsButtonClick" prefHeight="70.0" prefWidth="112.0"
                text="Credits">
            <VBox.margin>
                <Insets top="20.0"/>
            </VBox.margin>
        </Button>
        <Button onAction="#onExitButtonClick" prefHeight="70.0" prefWidth="112.0" text="Exit">
            <VBox.margin>
                <Insets top="20.0"/>
            </VBox.margin>
        </Button>
    </VBox>
    <columnConstraints>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
    </rowConstraints>
</GridPane>
